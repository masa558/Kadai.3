<!DOCTYPE html>
<html class="fontawesome-i2svg-active fontawesome-i2svg-complete">
  <body>
    <main>
      <p id="notice"></p>
        <div class="container">
          <div class="row">
            <%= render 'books/book', book: @book_new,user: @user %>
            <div class="col-md-8 offset-md-1">
              <h2>Book detail</h2>
              <table class="table">
                <tbody>
                  <tr>
                    <td>
                      <%= image_tag @book.user.get_profile_image(100,100) %>
                      <br>
                      <span><%= link_to @book.user.name, user_path(@book.user.id) %></span>
                    </td>
                    <td>
                      <%= link_to @book.title, book_path %>
                    </td>
                    <td>
                      <%= @book.body %>
                    </td>
                    <% if @book.user == current_user %>
                    <td>
                      <%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_108384" %>
                    </td>
                    <td>
                      <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-sm btn-danger destroy_book_108384" %>
                    </td>
                    <% end %>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
    </main>
  </body>
</html>
